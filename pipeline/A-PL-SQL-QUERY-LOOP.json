{
	"name": "A-PL-SQL-QUERY-LOOP",
	"properties": {
		"activities": [
			{
				"name": "EACH-TABLE-LIST",
				"type": "ForEach",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@variables('tableList')",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "COPY-DATA-DIFFRENT-TABLES",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "OracleSource",
									"oracleReaderQuery": {
										"value": "@concat('select * from ',item())",
										"type": "Expression"
									},
									"partitionOption": "None",
									"queryTimeout": "02:00:00"
								},
								"sink": {
									"type": "DelimitedTextSink",
									"storeSettings": {
										"type": "AzureBlobFSWriteSettings"
									},
									"formatSettings": {
										"type": "DelimitedTextWriteSettings",
										"quoteAllText": true,
										"fileExtension": ""
									}
								},
								"enableStaging": false,
								"translator": {
									"type": "TabularTranslator",
									"typeConversion": true,
									"typeConversionSettings": {
										"allowDataTruncation": true,
										"treatBooleanAsNumber": false
									}
								}
							},
							"inputs": [
								{
									"referenceName": "OracleTable2",
									"type": "DatasetReference"
								}
							],
							"outputs": [
								{
									"referenceName": "A_NEW_LANDING",
									"type": "DatasetReference",
									"parameters": {
										"fileName": {
											"value": "@concat(item(), '_', formatDateTime(utcnow(),'dd-mm-yyyy'),'.csv')",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
			}
		],
		"variables": {
			"tableList": {
				"type": "Array",
				"defaultValue": [
					"emp",
					"dept",
					"salgrade"
				]
			}
		},
		"annotations": []
	}
}